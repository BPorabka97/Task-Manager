@model IEnumerable<TaskManagerMVC.Models.TaskModel>

@{
    ViewData["Title"] = "SeeDone";
}

<h1>Done tasks list</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Restore", "Restore", new { id = item.TaskID }, new {@class = "btn btn-primary" }) 
            </td>
        </tr>
        }
    </tbody>
</table>
<div>
    <a class="btn btn-warning" asp-action="Index">Go back to tasks list</a>
</div>